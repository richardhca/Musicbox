extends layout_register_login

block content
    // - custom css (see in public/stylesheets/styly.css
        .login-form-col
        .btn-style
        .icn-style
        .icn-text-style
    .container-fluid.h-100.p-0
        .row.justify-content-center.align-items-center.p-0.mt-3
            i.material-icons.mr-2.icn-style library_music
            p.text-white.m-0.icn-text-style MusicBox
        hr
        .row.justify-content-center.align-items-center.p-0.mx-auto.login-form-col
            .col.mx-auto.p-0
                h5.text-white.text-center.font-weight-bold.mb-4 To continue, log in to MusicBox.
                form(method='post', action='')
                    .form-group
                        input#user_name.form-control.mx-auto(type='text'
                            placeholder='Email address or username' name='username' required
                        value=(undefined === user ? '' : user.username))

                    .form-group
                        input#password.form-control.mx-auto(type='password'
                            placeholder='Password' name='password' required
                        value=(undefined === user ? '' : user.password))

                    .row.justify-content-center.align-items-center.m-0.login-form-col
                        .col-sm-5.p-0
                            .form-check-inline
                                input#password_checkbox.form-check-input(type='checkbox'
                                        onclick="show_hidden_password()")
                                label.form-check-label.text-white(for='password_checkbox') Show Password
                        .col-sm-7.p-0
                            button.btn.btn-outline-primary.btn-block.btn-style(type='submit') LOG IN

                if errors
                    ul.mt-2
                        for error in errors
                            li.text-danger!= error.msg
                    
                hr.mt-5.mr-5
                h5.text-white.text-center.font-weight-bold.mb-4 Don't have an account?

                a.button.btn.btn-outline-primary.btn-block.btn-style(href="/register") SIGN UP FOR MUSICBOX

