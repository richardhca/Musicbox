div#album_detail
    .row
        .col-lg-4
            .d-flex.flex-column
                .d-flex.justify-content-end.flex-wrap
                    .album_card.card.mr-5
                        img.card-img-top(src='/images/music_cover_default_black.png')

                .d-flex.justify-content-end
                    ul.list-group.text-center.w-100.mr-3
                        li.list-group-item.pb-0
                            h4.text-white.noselect Album &#183; Artists
                        li.list-group-item.pt-0
                            h5.text-white.noselect Genres
                        li.list-group-item
                            button.btn.btn-secondary(id="album_detail_play_btn") PLAY
                        li.list-group-item.pb-0
                            p.text-white.noselect Never miss a new release! Catch all the latest music from artists you follow, plus new singles picked just for you. Updates every Friday.
                        li.list-group-item.pt-0
                            p.text-white.noselect 10 TRACKS
                        li.list-group-item.d-inline-block(id="album_detail_icon_list")
                            i.far.fa-heart.text-white.mr-4
                            //i.fas.fa-heart.text-white
                            i.fas.fa-share-alt.text-white.mr-4
                            i.fas.fa-ellipsis-h.text-white



        .col-lg-8
            #album_detail_track_list.list-group
                - for (var x = 0; x <10; x++)
                    .list-group-item.track_list
                        .row.flex-nowrap
                            .col.track_list_icon
                                i.material-icons.text-white.noselect music_note
                            .col
                                .text-white.noselect Track
                            .col.d-flex
                                .text-white.noselect 3:50
                                .dropdown
                                    i.material-icons.text-white.noselect.ml-5.track_list_more_icon.hidden_icon(id="trackDropdownMenu"
                                        role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") more_horiz
                                    .dropdown-menu(aria-labelledby="trackDropdownMenu")
                                        .dropdown-item Add to Playlist
                                        .dropdown-item Copy Track Link
                                        .dropdown-item Share to Other
                                        .dropdown-item Delete Track

                                //i.material-icons.text-white.noselect.ml-5.track_list_more_icon more_horiz



