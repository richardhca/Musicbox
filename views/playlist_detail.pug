div#playlist_detail
    .row
        .col-lg-4
            .d-flex.flex-column
                .d-flex.justify-content-end
                    .card.mr-3
                        img.card-img-top(src='/images/test.png')

                .d-flex.justify-content-end
                    ul.list-group.text-center.w-100.mr-3
                        li.list-group-item
                            h4.text-white Playlist
                        li.list-group-item
                            button.btn.btn-secondary(id="playlist_detail_play_btn") PLAY
                        li.list-group-item.pb-0
                            p.text-white Never miss a new release! Catch all the latest music from artists you follow, plus new singles picked just for you. Updates every Friday.
                        li.list-group-item.pt-0
                            p.text-white 10 TRACKS
                        li.list-group-item.d-inline-block(id="playlist_detail_icon_list")
                            i.far.fa-heart.text-white.mr-4
                            //i.fas.fa-heart.text-white
                            i.fas.fa-share-alt.text-white.mr-4
                            i.fas.fa-ellipsis-h.text-white



        .col-lg-8
            #playlist_detail_track_list.list-group
                - for (var x = 0; x <10; x++)
                    a.list-group-item
                        .row.flex-nowrap
                            .col
                                .text-white Track
                            .col
                                .text-white Artist
                            .col
                                .text-white Album
                            .col
                                .text-white Genres
                            .col
                                .text-white 3:50



