div#uploadpane.position-absolute
	div#uploader.upload-form
		h1.replace-text Upload Music
		p.close(title='Close Window')
			img(src='img/close-button.png' alt='Close' onclick="document.getElementById('uploadpane').style.display='none';")
		p Upload Your mp3 / wav files here!
		
		form#uf(method='post' enctype='multipart/form-data')
			input#sf(type='file' name='music' accept='audio/mp3, audio/wav' style='display: none;' multiple)
			input#pickfiles.button(type='button' value='Select' onclick="document.getElementById('sf').click()")
			input#uploadfiles.button(type='submit' value='Upload')
		
		div#filelist