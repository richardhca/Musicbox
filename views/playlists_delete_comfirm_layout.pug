.modal.fade(id="playlistsDeleteComfirmPane" tabindex="-1" role="dialog"
    aria-labelledby="playlistsDeleteComfirmTitle" aria-hidden="true")
    .modal-dialog(role="document")
        .modal-content
            .modal-header
                h5.modal-title(id="playlistsDeleteComfirmTitle")
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;
            .modal-body
                p Are you sure?
            .modal-footer
                button.btn.btn-secondary(type="button" data-dismiss="modal") Close
                button.btn.btn-primary.delete_playlist_comfirm(type="button" data-dismiss="modal") Confirm
